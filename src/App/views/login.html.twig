{% extends 'base.html.twig' %}

{% block mainPanel %}


    <form class="form-signin" method="post">

        <div class="row show-grid">
            <div class="col-xs-6 col-sm-4"></div>
            <div class="col-xs-6 col-sm-4">

                <h4 class="form-signin-heading">Sign in to {{ systemInfo.settings.acronym }}</h4>

            </div>
            <!-- Optional: clear the XS cols if their content doesn't match in height -->
            <div class="clearfix visible-xs"></div>
            <div class="col-xs-6 col-sm-4"></div>
        </div>

        <div class="row show-grid">
            <div class="col-xs-6 col-sm-4"></div>
            <div class="col-xs-6 col-sm-4">

                {% if form_submission == true %}

                    {% if exception == true %}
                        <div class="alert alert-danger">
                            <a class="close" data-dismiss="alert" href="#">×</a>{{ message }}
                        </div>
                    {% else %}
                        <div class="alert alert-success">
                            <a class="close" data-dismiss="alert" href="#">×</a>{{ message }}
                        </div>
                    {% endif %}

                {% else %}

                    {% if exception == true %}
                        <div class="alert alert-danger">
                            <a class="close" data-dismiss="alert" href="#">×</a>{{ message }}
                        </div>
                    {% endif %}
                {% endif %}

            </div>
            <!-- Optional: clear the XS cols if their content doesn't match in height -->
            <div class="clearfix visible-xs"></div>
            <div class="col-xs-6 col-sm-4"></div>
        </div>


        <div class="row show-grid">
            <div class="col-xs-6 col-sm-4"></div>
            <div class="col-xs-6 col-sm-4">

                <label for="inputEmail" class="sr-only">Email address</label>
                <input type="email" id="inputEmail" name="email" class="form-control" placeholder="Email address" required autofocus>

            </div>
            <!-- Optional: clear the XS cols if their content doesn't match in height -->
            <div class="clearfix visible-xs"></div>
            <div class="col-xs-6 col-sm-4"></div>
        </div>


        <div class="row show-grid">
            <div class="col-xs-6 col-sm-4"></div>
            <div class="col-xs-6 col-sm-4">

                <label for="inputPassword" class="sr-only">Password</label>
                <input type="password" id="inputPassword" name="password" class="form-control" placeholder="Password" required>

            </div>
            <!-- Optional: clear the XS cols if their content doesn't match in height -->
            <div class="clearfix visible-xs"></div>
            <div class="col-xs-6 col-sm-4"></div>
        </div>

        <div class="row show-grid">
            <div class="col-xs-6 col-sm-4"></div>
            <div class="col-xs-6 col-sm-4">

                <div class="checkbox">
                    <label>
                        <input type="checkbox" value="remember-me"> Remember me
                    </label>
                </div>

            </div>
            <!-- Optional: clear the XS cols if their content doesn't match in height -->
            <div class="clearfix visible-xs"></div>
            <div class="col-xs-6 col-sm-4"></div>
        </div>

        <div class="row show-grid">
            <div class="col-xs-6 col-sm-4"></div>
            <div class="col-xs-6 col-sm-4">

                <div class="input-group">
                    <a href="{{ path_for('forgotPassword')}}">Forgot your password?</a>
                </div>

            </div>
            <!-- Optional: clear the XS cols if their content doesn't match in height -->
            <div class="clearfix visible-xs"></div>
            <div class="col-xs-6 col-sm-4"></div>
        </div>

        <div class="row show-grid">
            <div class="col-xs-6 col-sm-4"></div>
            <div class="col-xs-6 col-sm-4">

                <button class="btn btn-lg btn-primary btn-block" type="submit">Sign in</button>

            </div>
            <!-- Optional: clear the XS cols if their content doesn't match in height -->
            <div class="clearfix visible-xs"></div>
            <div class="col-xs-6 col-sm-4"></div>
        </div>

        <div class="row show-grid">

            <div class="col-xs-6 col-sm-4"></div>
            <div class="col-xs-6 col-sm-4">

                <br>
                <a href="{{ path_for('register')}}">Don't have an account? Sign up here.</a>

                <br>
                <a href="https://www.linkedin.com/oauth/v2/authorization?response_type=code&client_id=86ix8uxlc7mudl&redirect_uri=https%3A%2F%2Fiaoe.online-engineering.net%2Foauth%2Fv2%2Fredirect&state=test">
                    <img width="150" src="/assets/images/Sign-in-Large---Default.png">
                </a>

            </div>
            <!-- Optional: clear the XS cols if their content doesn't match in height -->
            <div class="clearfix visible-xs"></div>
            <div class="col-xs-6 col-sm-4"></div>

        </div>
        <br>




    </form>

{% endblock %}