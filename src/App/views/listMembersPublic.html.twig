
    {% if exception == true %}
        <b>List not available at the moment</b>
    {% else %}

        <br>

        {% if members == null %}
            <b>List not available at the moment</b>
        {% else %}


            {% for member in members %}

                 <div class="row">

                     <div class="col-sm-9">
                        <h3 class="media-heading">{{ member.user.institution }} <br>
                            {%  if member.user.department != null %}
                                <small>{{ member.user.department }}</small><br>
                            {% endif %}
                            <small>{{ member.user.city }}, {{ member.country }}</small></h3>
                         <p><b>Contact:</b> {{ member.user.title }} {{ member.user.firstname }} {{ member.user.lastname }}<br>
                             <b>E-mail:</b> {{ member.email }}</p>
                         {% if member.user.website != null %}
                             <p><a class="btn btn-default" target="_blank" href="{{ member.user.website }}" role="button">website &raquo;</a></p>
                         {% endif %}
                     </div>
                 </div>
                 <hr>
            {% endfor %}

        {% endif %}
    {% endif %}
