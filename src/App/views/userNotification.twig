<html>

<head>

    <!-- Bootstrap core CSS -->
    <link href="{{ baseUrl }}/assets/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="{{ baseUrl }}/assets/form-helper/css/bootstrap-formhelpers.min.css" rel="stylesheet">

    <!-- Bootstrap core JavaScript
================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
    <script src="{{ baseUrl }}/assets/bootstrap/js/bootstrap.min.js"></script>
    <script src="{{ baseUrl }}/assets/form-helper/js/bootstrap-formhelpers.min.js"></script>
    <script src="{{ baseUrl }}/assets/bootstrap-validator/validator.min.js"></script>


</head>
<body>

<div class="container" style="margin-top:30px">

    <div class="col-md-10 col-md-offset-1">
        <h1 class="text-center"><img src="{{ baseUrl }}/assets/images/logo.png" width="850"></h1>
        <hr>
        <div class="panel panel-default">
            <div class="panel-heading"><h3 class="panel-title"><strong>Notification</strong></h3>
                <div style="float:right; font-size: 80%; position: relative; top:-10px"><a href="{{ baseUrl }}/login">User Login</a></div>
            </div>

            <div class="panel-body">

                {% if exception == true %}
                    <div class="alert alert-danger">
                       {{ message }}
                    </div>
                {% else %}
                    <div class="alert alert-success">
                        {{ message }}
                    </div>
                {% endif %}

            </div>
        </div>
    </div>
</div>

</body>

<script>
    $('#myForm').validator();
</script>


</html>