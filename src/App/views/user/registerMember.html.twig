{% extends 'base.html.twig' %}

{% block mainPanel %}

    <!-- Bootstrap core CSS -->
    <link href="{{ baseUrl }}/assets/form-helper/css/bootstrap-formhelpers.min.css" rel="stylesheet">

    <!-- Placed at the end of the document so the pages load faster -->
    <script src="{{ baseUrl }}/assets/form-helper/js/bootstrap-formhelpers.min.js"></script>
    <script src="{{ baseUrl }}/assets/bootstrap-validator/validator.min.js"></script>

    <div class="panel-group">

        <div class="panel panel-primary">
            <div class="panel-heading"><strong>Your billing information</strong></div>
            <div class="panel-body">

                <div class="jumbotron">
                    <div class="media">
                        <div class="media-left">
                            <img class="media-object" src="{{ baseUrl }}/assets/images/membership_logo.png" alt="...">
                        </div>
                        <div class="media-body">

                            <h2 class="media-heading">{{ membershipType.typeName }}</h2>
                            <strong>Description:</strong> {{ membershipType.description }}
                            <h5><strong>Fee: </strong>{{ membershipType.currency }} {{ membershipType.fee }} / {{ membershipType.recurrence }}</h5>
                        </div>
                    </div>
                </div>

                <h4>Enter/modify the data as you wish it to appear on your invoice:</h4>

                <form data-toggle="validator" role="form" method="post">

                    {% if form_submission == true %}

                        {% if exception == true %}
                            <div class="alert alert-danger">
                                <a class="close" data-dismiss="alert" href="#">×</a>{{ message }}
                            </div>
                        {% else %}
                            <div class="alert alert-success">
                                <a class="close" data-dismiss="alert" href="#">×</a>{{ message }}
                            </div>
                        {% endif %}

                    {% else %}

                        {% if exception == true %}
                            <div class="alert alert-danger">
                                <a class="close" data-dismiss="alert" href="#">×</a>{{ message }}
                            </div>
                        {% endif %}
                    {% endif %}


                    <div class="form-group {% if form.name.error == true %}has-error{% endif %}">
                        <label class="control-label" for="first_name">Name</label>
                        <input required="required" type="text" name="first_name" id="first_name" class="form-control" placeholder="First Name" value="{{ form.name.value }}" tabindex="1">
                    </div>

                    <div class="form-group {% if form.institution.error == true %}has-error{% endif %}">
                        <label class="control-label" for="institution">Institution</label>
                        <input type="text" name="institution" id="institution" class="form-control " placeholder="Institution" value="{{ form.institution.value }}" tabindex="3">
                    </div>

                    <div class="form-group {% if form.street.error == true %}has-error{% endif %}">
                        <label class="control-label" for="street">Street</label>
                        <input required type="text" name="street" id="street" class="form-control " placeholder="street" value="{{ form.street.value }}" tabindex="3">
                    </div>



                    <div class="row">
                        <div class="col-xs-12 col-sm-4 col-md-4">
                            <div class="form-group {% if form.country.error == true %}has-error{% endif %}">
                                <label for="">Country</label>
                                <div  id="country" class="bfh-selectbox bfh-countries" data-country="{{ form.country.value }}"  data-name="country" data-flags="true">
                                    <input type="hidden" value="">
                                    <a class="bfh-selectbox-toggle" role="button" data-toggle="bfh-selectbox" href="#">
                                        <span class="bfh-selectbox-option input-medium" data-option=""></span>
                                        <b class="caret"></b>
                                    </a>
                                    <div class="bfh-selectbox-options">
                                        <input type="text" class="bfh-selectbox-filter">
                                        <div role="listbox">
                                            <ul role="option">
                                            </ul>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-xs-12 col-sm-4 col-md-4">
                            <div class="form-group {% if form.city.error == true %}has-error{% endif %}">
                                <label for="city">City</label>
                                <input required="required" type="text" name="city" id="city" class="form-control " placeholder="" value="{{ form.city.value }}" tabindex="5">
                            </div>
                        </div>
                        <div class="col-xs-12 col-sm-4 col-md-4">
                            <div class="form-group {% if form.zip.error == true %}has-error{% endif %}">
                                <label for="zip">ZIP</label>
                                <input type="text" name="zip" id="zip" class="form-control " placeholder="" value="{{ form.zip.value }}" tabindex="6">
                            </div>
                        </div>
                    </div>


                    <div class="row">
                        <div class="col-xs-12 col-sm-6 col-md-6">
                            <div class="form-group {% if form.vat.error == true %}has-error{% endif %}">
                                <label for="vat">VAT Number of your institution (optional)</label>
                                <input type="text" name="vat" id="vat" class="form-control " placeholder="" value="{{ form.vat.value }}" tabindex="5" data-error="" />
                                <div class="help-block with-errors"></div>
                            </div>
                        </div>
                        <div class="col-xs-12 col-sm-6 col-md-6">
                            <div class="form-group {% if form.reference.error == true %}has-error{% endif %}">
                                <label for="reference">Reference (ex. order number, etc. Optional)</label>
                                <input type="text" name="reference" id="reference" class="form-control " placeholder="" value="{{ form.reference.value }}" tabindex="6" data-error="">
                                <div class="help-block with-errors"></div>
                            </div>
                        </div>
                    </div>


                    <div class="input-group">

                    </div>

                    <button type="submit" class="btn btn-success">Save Profile</button>

                    <hr style="margin-top:10px;margin-bottom:10px;" >

                    <div class="form-group">


                    </div>
                </form>
            </div>
        </div>

    </div>

{% endblock %}